
/**
 * @file SkillSwap Firestore Security Rules
 * @version 8
 *
 * @description
 * This ruleset enforces a strict user-ownership model for personal data and a shared-access model for collaborative data.
 * It also introduces an admin role for managing user credits.
 *
 * Key Security Decisions:
 * - Users can only access their own data under `/users/{userId}`.
 * - Authenticated users can list all users for discovery purposes.
 * - Admins can read any user profile and update `creditsBalance`.
 * - Conversations and Sessions use a `memberIds` array for secure, queryable access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Rules for user profiles.
     * Admins can read any user profile and update their credits balance.
     * Regular users can only access their own data, but can list all users.
     */
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin() || isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if (isOwner(userId) && incomingData().id == resource.data.id) || 
                       (isAdmin() && incomingData().diff(resource.data).affectedKeys().hasOnly(['creditsBalance']));
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for predefined skill categories.
     */
    match /skills/{skillId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Rules for skills associated with a user.
     */
    match /users/{userId}/userSkills/{userSkillId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for credit transactions related to a session.
     */
    match /sessions/{sessionId}/transactions/{transactionId} {
      allow get, list: if canAccessSession(sessionId) || isAdmin();
      allow create: if canAccessSession(sessionId);
      allow update, delete: if false;
    }

    /**
     * @description Rules for credit balance of a user.
     */
    match /users/{userId}/creditBalance {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
      allow delete: if false;
    }

    /**
     * @description Rules for sessions collection.
     * Users can query for sessions where they are a member.
     */
    match /sessions/{sessionId} {
      allow get: if canAccessSession(sessionId) || isAdmin();
      allow list: if (isSignedIn() && request.auth.uid == request.query.get("where.memberIds")[2]) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.memberIds;
      allow update: if canAccessSession(get(/databases/$(database)/documents/sessions/$(sessionId)).data);
      allow delete: if canAccessSession(get(/databases/$(database)/documents/sessions/$(sessionId)).data);
    }

    /**
     * @description Rules for a user's availability for sessions.
     */
    match /users/{userId}/availabilities/{availabilityId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for conversations between two users.
     * Users can query for conversations where they are a member.
     */
    match /conversations/{conversationId} {
      allow get: if canAccessConversation(conversationId) || isAdmin();
      allow list: if (isSignedIn() && request.auth.uid == request.query.where.memberIds[2]) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.memberIds;
      allow update: if canAccessConversation(get(/databases/$(database)/documents/conversations/$(conversationId)).data);
      allow delete: if canAccessConversation(get(/databases/$(database)/documents/conversations/$(conversationId)).data);
    }

    /**
     * @description Rules for messages within a conversation.
     */
    match /conversations/{conversationId}/messages/{messageId} {
      allow get, list: if canAccessConversation(conversationId) || isAdmin();
      allow create: if canAccessConversation(conversationId) && request.resource.data.senderId == request.auth.uid;
      allow update, delete: if false;
    }

    /**
     * @description Rules for a review for a session.
     */
    match /sessions/{sessionId}/review {
      allow get: if canAccessSession(sessionId) || isAdmin();
      allow list: if false;
      allow create: if canAccessSession(sessionId);
      allow update, delete: if false;
    }

    /**
     * @description Rules for verification data for a user.
     */
    match /users/{userId}/verification {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if (isOwner(userId) && request.resource.data.userId == userId) || isAdmin();
      allow delete: if false;
    }

    /**
     * @description Rules for reports submitted by users.
     */
    match /reports/{reportId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    /**
     * @description Rules for blocked user relationships.
     */
    match /users/{userId}/blockedUsers/{blockedUserId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.blockerId == userId;
      allow update: if false;
      allow delete: if isOwner(userId) && request.resource.data.blockerId == userId;
    }

    /**
     * @description Rules for notifications for a user.
     */
    match /users/{userId}/notifications/{notificationId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if false;
    }

    /**
     * @description Rules for notification preferences for a user.
     */
    match /users/{userId}/notificationPreferences {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if false;
    }

    /**
     * @description Rules for achievement badges.
     */
    match /badges/{badgeId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Rules for badges earned by a user.
     */
    match /users/{userId}/userBadges/{userBadgeId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update, delete: if false;
    }

    /**
     * @description Rules for streak data for a user.
     */
    match /users/{userId}/streak {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if false;
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function incomingData() {
      return request.resource.data;
    }

    function canAccessConversation(conversationId) {
      let conversationDoc = get(/databases/$(database)/documents/conversations/$(conversationId));
      return isSignedIn() && request.auth.uid in conversationDoc.data.memberIds;
    }

    function canAccessSession(sessionId) {
      let sessionDoc = get(/databases/$(database)/documents/sessions/$(sessionId));
      return isSignedIn() && request.auth.uid in sessionDoc.data.memberIds;
    }
  }
}
